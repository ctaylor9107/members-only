<h1>Posts</h1>

<ul>
  <% @posts.each do |post| %>
    <li>
      <%= post.title %><br>
      <%= post.body %><br>
      <% if user_signed_in? %>
        <p>- <%= post.user.email %></p>
      <% else %>
        <p>- Anonymous</p>
      <% end %>
    </li>
  <% end %>
</ul>

<%= link_to "New Post", new_post_path %>